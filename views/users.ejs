<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/users.css">
  <title>User page</title>
</head>

<body>
  <div class="container">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active" aria-current="page" href="#">Active</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#" id="log-out">Log Out</a>
      </li>
    </ul>
  </div>
  <div class="container">
    <div class="row">
      <h1>User Page</h1>
    </div>
    <div class="row">
      <div class="message"></div>
    </div>
  </div>
  <div class="container">
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th scope="col">STT</th>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Password</th>
          <th scope="col">fix</th>
        </tr>
      </thead>
      <tbody id="tbody">
        <% for( let i=0; i <data.length; i++) { %>
          <tr>
            <th scope="row">
              <%= i+1 %>
            </th>
            <td>
              <%= data[i].ID %>
            </td>
            <td>
              <%= data[i].name %>
            </td>
            <td>
              <%= data[i].email %>
            </td>
            <td>
              <%= data[i].password %>
            </td>
            <td>
              <span id="<%= data[i].ID %>" class="btn-delete btn btn-danger">
                DELETE
              </span>
              <span id="update-<%= data[i].ID %>" class="btn-update btn btn-infor">
                UPDATE
              </span>
            </td>
          </tr>
          <% } %>
      </tbody>
    </table>

    <nav aria-label="Page navigation example">
      <ul class="pagination">
        <li class="page-item">
          <a class="page-link" href="#" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        <% for (let i = 1; i <= Math.ceil(total/page_size); i++){%>
          <li class="page-item">
            <a class="page-link" href="/users?page_size=<%= page_size %>&page_index=<%= i %>  ">
              <%= i %> 
            </a>
          </li>
        <%}%>
        <li class="page-item">
          <a class="page-link" href="#" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/users.js"></script>
</body>

</html>